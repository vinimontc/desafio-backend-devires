{
  "openapi": "3.0.0",
  "info": {
    "title": "API Teste Devires",
    "description": "API de gerenciamento de usuários",
    "version": "1.0.0",
    "contact": {
      "name": "Vinícius Monteiro Carvalho",
      "email": "vini.mont.c@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333/",
      "description": "Local server"
    }
  ],
  "paths": {
    "/sessions": {
      "post": {
        "tags": ["Session"],
        "summary": "Authentication user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { 
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "email@mail.com",
                  "password": "password"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success operation"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a user",
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success to create a new user"
          },
          "400": {
            "description": "User already exists"
          },
          "401": {
            "description": "User is not authorized"
          }
        }
      }
    },
    "/users/{user_id}": {
      "delete": {
        "tags": ["Users"],
        "summary": "Deletes a user",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "User id to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Success to delete a user"
          },
          "401": {
            "description": "User is not authorized"
          },
          "404": {
            "description": "User does not exists"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Nome do usuário"
        },
        "email": {
          "type": "string",
          "example": "user@mail.com"
        },
        "password": {
          "type": "string",
          "example": "password"
        },
        "type_id": {
          "type": "number",
          "example": 1
        },
        "status": {
          "type": "string",
          "enum": [
            "ativo",
            "inativo"
          ]
        }
      }
    }  
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}